{
    "compilerOptions": {
        "allowJs": false,
        "baseUrl": "./",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dst",
        "preserveConstEnums": true,
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6"
    },
    "include": [
        "mocha/**/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "tests/**/*.spec.ts",
        "node_modules"
    ]
}
